        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
            <td>
                <a asp-action="EditField" asp-route-id="@Model.Id" asp-route-field="Email" class="btn btn-primary btn-sm">
                    Edit
                </a>
            </td>
        </tr>
        <tr>
            <th>Password</th>
            <td>********</td>
            <td>
                <a asp-action="EditField" asp-route-id="@Model.Id" asp-route-field="Password" class="btn btn-primary btn-sm">
                    Edit
                </a>
            </td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
            <td>
                <a asp-action="EditField" asp-route-id="@Model.Id" asp-route-field="PhoneNumber" class="btn btn-primary btn-sm">
                    Edit
                </a>
            </td>
        </tr>
        <tr>
            <th>Payment Address</th>
            <td>@Model.PaymentAddress</td>
            <td>
                <a asp-action="EditField" asp-route-id="@Model.Id" asp-route-field="PaymentAddress" class="btn btn-primary btn-sm">
                    Edit
                </a>
