            </td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
            <td>
                <a asp-action="EditField" asp-route-id="@Model.Id" asp-route-field="LastName" class="btn btn-primary btn-sm">
